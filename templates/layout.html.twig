{% extends 'base.html.twig' %}

{% block stylesheets %}
    <!-- CSS -->
    <link href="/css/furalys.css" rel="stylesheet">
    <!-- FONT -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
{% endblock %}

{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/0709ae03e6.js" crossorigin="anonymous"></script>
    <script src="/js/search_bar.js"></script>
{% endblock %}

{% block body %}
    <div class="home-section">
            <div class="container">
                <header>
                    <!-- LOGO -->
                    <div class="header-left">
                        <a href="" class="site-title">Furalys Library</a>
                    </div>
                    <!-- UP MENU -->
                    <div class="header-right">
                        <nav>
                            <a href="#" class="search-link">Search</a>
                            <a href="#">Artists</a>
                            <a href="#">Categories</a>
                            <a href="#">Own Creations</a>
                            <div class="search hidden">
                                <button class="close-search">
                                    <i class="fas fa-times"></i>
                                </button>
                                <input type="text" class="input-search" placeholder="Search...">
                                <button class="search-btn">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </nav>
                    </div>
                </header>

                <!-- BODY 
                -> home.html.twig  -->
                {% block container %}{% endblock %}
                
                <!-- FOOTER -->
                <footer>
                    <div class="footer">
                        <div class="footer-links">
                            <div>
                                <span class="copyright">Copyright &copy; Furalys 2022</span>
                            </div>
                            <div>
                                <a href="#">Privacy Policy</a>
                            </div>
                        </div>
                    </div>
                </footer>
            </div>
        </div> 
{% endblock %}